<script src="@Url.Content("~/Content/")js/jquery.min.js"></script>
<script src="@Url.Content("~/Scripts/")/jquery-3.1.1.js"></script>
<script src="@Url.Content("~/Content/")js/bootstrap.min.js"></script>
<link href="@Url.Content("~/Content/")js/bootstrap.min.css" rel="stylesheet" />
@model OnlineSmartPhoneShop_Entities.Models.Smartphone
<div>

    <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Details</h4>
    </div>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name) :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.Price) :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.ImgURL) :
            </dt>

            <dd>
                <img src="@Html.DisplayFor(model => model.ImgURL)" alt="img" style="width:15%;" />
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.Description) :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.ReleaseDate) :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
            <hr />
        </dl>
     
            @if (User.IsInRole("Guest"))
            {
                <div class="modal-footer">
                    <span class="btn btn-default" role="button" style="width:15%; background-color:#ffffff; margin-left: 70%; padding: 2%;">
                        @Html.ActionLink("Back to List", "Index") |
                        @Html.ActionLink("Buy this phone ", "Buy", "BuySmartphones")
                    </span>
                </div>
            }
             
    </div>
</div>