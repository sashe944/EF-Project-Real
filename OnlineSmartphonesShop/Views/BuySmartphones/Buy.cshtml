
@{
    ViewBag.Title = "Buy";
}
<section class="cart-section">
    <div class="section-title">
        <h2 class="container text-uppercase">
            Shoping Cart
        </h2>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                        <tbody>
                                <tr>
                                    <td>
                                        <div>   
                                            @if(TempData["smartphoneId"] != null)
                                            {
                                                <h5>@TempData["smartphoneId"]</h5>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                            <div>
                                                @if (TempData["smartphoneImage"] != null)
                                                {
                                                    <h5><img src="@TempData["smartphoneImage"]" style="width:10%;"/></h5>
                                                }
                                            </div>      
                                    </td>
                                    <td>
                                        <div>
                                            @if (TempData["smartphoneName"] != null)
                                            {
                                                <h5>@TempData["smartphoneName"]</h5>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            @if (TempData["smartphonePrice"] != null)
                                            {
                                                <h5>@TempData["smartphonePrice"]</h5>
                                            }
                                        </div>
                                    </td>
                                </tr>
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

